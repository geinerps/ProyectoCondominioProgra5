@{
    ViewData["Title"] = "Editar Condominio";
}


<div class="row justify-content-center">
    <div class="col-10">
        <div class="card">
            <div class="card-header bg-success text-white text-center">
                <h3>Editar Condominio</h3>
            </div>
            <div class="card-body p-4">
                <form method="post" asp-action="Update">
                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="email" class="form-label">Nombre</label>
                                <input type="text" name="Nombre" class="form-control" id="Nombre"
                                    value="@ViewBag.condominio.nombre">
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-3">
                                <label for="email" class="form-label">TelefonoOficina</label>
                                <input type="text" name="TelefonoOficina" class="form-control" id="TelefonoOficina"
                                    value="@ViewBag.condominio.telefonoOficina">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="email" class="form-label">Dirección</label>
                                <input type="text" name="Direccion" class="form-control" id="email"
                                    value="@ViewBag.condominio.direccion">
                            </div>
                        </div>
                    </div>
                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-success" id="btn-submit" name="idProyectoHabitacional"
                            value="@ViewBag.condominio.idProyectoHabitacional">Guardar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
